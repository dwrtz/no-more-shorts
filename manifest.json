{
  "manifest_version": 3,
  "name": "No More Shorts",
  "version": "1.0",
  "description": "Removes YouTube Shorts from the YouTube interface",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}